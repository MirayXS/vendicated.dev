---
import { loadStrings } from "locales";
import ThemeToggle from "./ThemeToggle/index.astro";
import Link from "./Link.svelte";

export interface Props {
    title: string;
}

const routes = ["about", "contact"] as const;

const t = await loadStrings("en", true);
---

<nav>
    <div id="btns">
        <ul>
            <li class="focus-ring-parent">
                <Link focusRing={false} href="/">
                    {t("routes.home")}
                </Link>
            </li>
            {
                routes.map(route => (
                    <li class="focus-ring-parent">
                        <Link focusRing={false} href={`/${route}`}>
                            {t(`routes.${route}`)}
                        </Link>
                    </li>
                ))
            }
        </ul>
        <ThemeToggle />
    </div>
</nav>

<style>
    nav {
        background-color: var(--surface);

        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;

        padding: 1em;
    }

    a:not(:hover) {
        text-decoration: none;
    }

    #btns {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    ul {
        margin-inline: auto;
        float: right;
        list-style-type: none;
        padding: 0;
        display: flex;
        gap: 0.5em;
    }

    li {
        float: left;
        display: inline-block;
        border-radius: 8px;
        padding: 0.1em 0.5em;
    }

    @media (max-width: 600px) {
        ul {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-bottom: 1.5em;
        }

        nav {
            padding-bottom: 1.5em;
        }
    }
</style>
