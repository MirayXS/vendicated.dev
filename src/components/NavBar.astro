---
import { loadStrings } from "locales";
import ThemeToggle from "./ThemeToggle/index.astro";

export interface Props {
    title: string;
}

const routes = ["about", "contact", "blog"] as const;

const t = await loadStrings("en", true);
---

<nav>
    <div id="btns">
        <ul>
            <li>
                <a href="/">{t("routes.home")}</a>
            </li>
            {
                routes.map(route => (
                    <li>
                        <a href={`/${route}`}>{t(`routes.${route}`)}</a>
                    </li>
                ))
            }
        </ul>
        <ThemeToggle />
    </div>
</nav>

<style>
    nav {
        background-color: var(--surface);

        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;

        padding: 1em;
    }

    a {
        text-decoration: none;
        text-align: center;
        color: var(--color);

        transition: 0.15s ease;
        transition-property: color, text-decoration;
    }

    a:not(#title) {
        padding: 0.5em;

        &:hover,
        &:focus {
            text-decoration: underline;
            text-decoration-thickness: 2px;
            outline: none;
            color: var(--accent);
        }
    }

    #btns {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    ul {
        margin-inline: auto;
        float: right;
        list-style-type: none;
        overflow: hidden;
        padding: 0;
    }

    li {
        float: left;
    }

    @media (max-width: 600px) {
        ul {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-bottom: 1.5em;
        }

        nav {
            padding-bottom: 1.5em;
        }
    }
</style>
