---
export const prerender = true;

import Layout from "layouts/Layout.astro";
import Socials from "components/Socials.astro";

import CenteredBody from "components/CenteredBody.astro";

import { loadStrings, getStaticPaths } from "locales";
import Trans from "locales/Trans.astro";
import Button88X31 from "components/Button88x31.astro";

export { getStaticPaths };

const t = await loadStrings("en", true);
---

<Layout title={t("home.title")} description={t("home.description")}>
    <CenteredBody>
        <section>
            <h1>
                <Trans i18nKey="home.hello">
                    Hi, I'm <span>Vee!</span>
                </Trans>
            </h1>
            <p>
                {t("home.about")}
                <br />
                {t("home.about2")}
            </p>
        </section>

        <section id="socials">
            <h2>{t("home.socialsTitle")}</h2>
            <Socials class="socials" />
        </section>

        <section id="friends">
            <div id="frens">
                <Button88X31
                    name="me"
                    url="/88x31"
                    title="88x31 made by arHSM!"
                />

                <Button88X31 name="megu" url="https://megu.dev" />
                <Button88X31 name="c7" url="https://c7.pm" />
                <Button88X31 name="wing" url="https://wingio.xyz" />
                <Button88X31 name="epsi" url="https://espi.me" />
                <Button88X31 name="caitlyn" url="https://caitlyn.moe" />
                <Button88X31 name="vap" url="https://github.com/vap0r1ze" />
                <Button88X31 name="lewi" url="https://lewisakura.moe" />
                <Button88X31 name="aagamer" url="https://aagaming.me" />
                <Button88X31 name="alula" url="https://alula.me" />
                <Button88X31 name="rushii" url="https://rushii.dev/" />
                <Button88X31 name="rinicide" url="https://github.com/rniii" />
                <Button88X31 name="samara" url="https://khcrysalis.dev" />
                <Button88X31 name="chloe" url="https://sapphic.moe" />
                <Button88X31 name="paiger" url="https://codeberg.org/paige" />

                {
                    /*
                <Button88X31
                    name="mantikafasi"
                    url="https://mantikafasi.dev/"
                />
                <Button88X31 name="X1nto" url="https://xinto.dev/" />
                <Button88X31 name="Katlyn" url="https://katlyn.dev/" />
                <Button88X31 name="fawn" url="https://fawn.moe" source="cobu" />
                <Button88X31 name="sapphicmoe" url="https://sapphic.moe" />
                    */
                }
            </div>

            <script is:inline>
                // Shuffle friends, skipping first child (self)
                const frens = document.querySelector("#frens");
                const nodes = Array.from(frens.children);
                const fixed = nodes.shift();
                for (let i = nodes.length - 1; i > 0; i--) {
                    const j = Math.floor(Math.random() * (i + 1));
                    [nodes[i], nodes[j]] = [nodes[j], nodes[i]];
                }
                frens.replaceChildren(fixed, ...nodes);
            </script>
        </section>
    </CenteredBody>
</Layout>

<style lang="scss">
    section {
        margin-bottom: 2.5em;
    }

    span {
        color: var(--accent);
    }

    h2 {
        font-size: unset;
    }

    a:not(:hover, :focus) {
        text-decoration: none;
    }

    #frens {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    // trolley
    @media screen and (max-width: 1506px) {
        #frens {
            justify-content: center;
        }
    }
</style>
